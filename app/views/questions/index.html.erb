<h1 align="center">Manage Questions</h1>

<link href="../css/froala_style.min.css" rel="stylesheet" type="text/css" />
<table>
  <tr>
    <td><%= glyph_to("New", new_question_path) %></td>
    <td>&nbsp;</td>
    <td align="right"><div class="paginate_extended"><%= will_paginate_extended @questions %></div></td>
  </tr>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th></th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td class="fr-view"><%= raw question.question %></td>
      <td><%= question.answer %></td>
      <td style="white-space: nowrap;">
        <%= glyph_to "Show", question %>
        <%= glyph_to "Edit", edit_question_path(question) %>
        <%= glyph_to "Delete", question, method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
</table>
<br /><br />
  